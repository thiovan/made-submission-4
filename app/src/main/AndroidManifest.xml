<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="thiovan.submission4">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="thiovan.submission4.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value="thiovan.submission4.activities.MainActivity" />

        <activity
            android:name="thiovan.submission4.activities.DetailActivity"
            android:label="@string/header_detail" />
        <activity
            android:name="thiovan.submission4.activities.MainActivity"
            android:label="@string/header_main">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>